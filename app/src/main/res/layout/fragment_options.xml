<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey100"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/shipper_info"
        android:background="@drawable/ripple_normal"
        android:clickable="true"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <LinearLayout
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:textColor="@color/black_text"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ic"
            android:background="@drawable/circle"
            android:backgroundTint="#FF4DB6AC"
            android:src="@drawable/ic_options_location"
            android:padding="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <TextView
            android:layout_marginStart="24dp"
            android:fontFamily="sans-serif"
            android:layout_toEndOf="@+id/ic"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:text="@string/get_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:id="@+id/toggle_get_notifications"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_option"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </RelativeLayout>

    <View
        android:background="@color/divider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_options"
        android:overScrollMode="never"
        android:paddingTop="16dp"
        android:paddingBottom="?actionBarSize"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>