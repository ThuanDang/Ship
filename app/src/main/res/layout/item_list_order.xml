<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="4dp"
        android:background="@drawable/ripple_card"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/icon_order"
            android:background="@drawable/circle"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_width="48dp"
            android:layout_height="48dp">
                <TextView
                    android:id="@+id/text_image_oder"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/info_order_form"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_toStartOf="@+id/btn_get_order"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_order"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />
            <TextView
                android:id="@+id/place_receiver"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />
            <TextView
                android:id="@+id/place_delivery"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ship_cost"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_get_order"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_btn_get"
            style = "@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
